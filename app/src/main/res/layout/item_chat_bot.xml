<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp">
    <ImageView
        android:id="@+id/img_bot_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_circle_white_shadow"
        android:elevation="2dp"
        android:padding="8dp"
        android:src="@drawable/ic_chat"
        app:tint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_message" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_chat_bot_gray"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Chào bạn, mình là trợ lý cảm xúc. Hôm nay bạn cảm thấy thế nào? Hãy chia sẻ với mình nhé."
        android:textColor="#212121"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sans-serif"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintStart_toEndOf="@id/img_bot_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Chào bạn!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:text="Trợ lý AI"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tv_message"
        app:layout_constraintBottom_toTopOf="@id/tv_message"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>