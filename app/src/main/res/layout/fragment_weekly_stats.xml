<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA"
    android:clipToPadding="false"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Phân bố cảm xúc"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rounded_gray_input"
                    android:padding="4dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrevWeek"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:icon="@drawable/ic_arrow_left"
                        app:iconTint="#757575"
                        app:rippleColor="#33000000"/>

                    <TextView
                        android:id="@+id/btnSelectWeek"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7 ngày gần đây"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="?attr/selectableItemBackground"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNextWeek"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconTint="#757575"
                        app:rippleColor="#33000000"/>
                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerMoodCounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_mood_stat"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Thành tích ghi chép"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:spacing="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_orange_light"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">


                        <TextView
                            android:id="@+id/textCurrentStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#FF5722"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuỗi hiện tại"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_gray_input"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/textLongestStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kỷ lục"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/streakNodesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                </LinearLayout>

                <TextView
                    android:id="@+id/textTotalEntries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tổng số bài viết: 42"
                    android:textSize="13sp"
                    android:textColor="#9E9E9E"
                    android:gravity="center"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Diễn biến cảm xúc"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="24dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="8dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_emotion_very_satisfied"
                            app:tint="@color/emotion_very_satisfied"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_emotion_satisfied"
                            app:tint="@color/emotion_satisfied"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_emotion_neutral"
                            app:tint="@color/emotion_neutral"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_emotion_dissatisfied"
                            app:tint="@color/emotion_dissatisfied"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_emotion_very_dissatisfied"
                            app:tint="@color/emotion_very_dissatisfied"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#EEEEEE"
                        android:layout_marginBottom="20dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>