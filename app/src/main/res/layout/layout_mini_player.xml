<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="32dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#252525"
    app:strokeWidth="1dp"
    app:strokeColor="#1AFFFFFF"
    app:rippleColor="#33FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="12dp">
        <ImageView
            android:id="@+id/imgDisk"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:src="@drawable/ic_music_note"
            android:background="@drawable/bg_disk_circle"
            app:tint="@color/white"
            android:contentDescription="Music Icon" />

        <LinearLayout
            android:id="@+id/layoutControls"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btnPauseResume"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_pause"
                android:scaleType="centerInside"
                app:tint="@color/white"
                android:contentDescription="Pause or Resume" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_stop_square"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:tint="#FF8A80"
                android:contentDescription="Stop Music" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>