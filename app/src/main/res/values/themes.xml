<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MoodPress" parent="Theme.Material3.Light.NoActionBar">
    </style>

    <style name="Theme.MoodPress" parent="Base.Theme.MoodPress" />

    <style name="Theme.MoodPress.Splash" parent="Theme.MoodPress">
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorner">
        <item name="android:background">@drawable/bg_rounded_corner</item>
    </style>

    <style name="CalendarHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item> <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarHeader.Modern">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#9E9E9E</item> <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CalendarHeader.Modern.Weekend">
        <item name="android:textColor">#FF8A80</item> </style>
</resources>